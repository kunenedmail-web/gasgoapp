
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has a specific role
    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Users can create their own user document upon signup
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    match /orders/{orderId} {
      // Customers can create orders
      allow create: if request.auth != null;

      // Customers can read their own orders. Drivers can read all orders.
      allow list, get: if (isRole('customer') && resource.data.userId == request.auth.uid) || isRole('driver');
    }
  }
}
