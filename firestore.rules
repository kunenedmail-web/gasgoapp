rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TEMPORARY: Make the entire orders collection public for reading.
    // This is for debugging only and is not secure.
    match /orders/{orderId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
    }
  }
}