
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Allow authenticated users to list all orders (for drivers)
      allow list: if request.auth != null;
      
      // Allow customers to create orders for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow customers to read their own orders.
      // Allow drivers to read orders they have accepted.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid);

      // Allow drivers to accept (update) an order.
      allow update: if request.auth != null && request.resource.data.status == 'accepted' && resource.data.driverId == null;
    }
  }
}
